.excerpt-wrap.row
  - if (post.smallThumb) {
  div(class="col l4 m3")
    img(class="lazy", data-src=post.smallThumb)
  - }
  div(class=rightclass)
    h3.post-title
      a(href="/"+post.path) #{post.title}
    - if (post.description) {
    .description_wrap #{post.description}
    - }